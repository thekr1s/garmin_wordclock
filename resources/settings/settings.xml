<settings>

    <setting propertyKey="@Properties.Language" title="@Strings.LanguageTitle">
        <settingConfig type="list">
            <listEntry value="0">@Strings.LangDutch</listEntry>
            <listEntry value="1">@Strings.LangEnglish</listEntry>
        </settingConfig>
    </setting>
    <setting propertyKey="@Properties.HighlightColor" title="@Strings.HighlightColorTitle">
        <settingConfig type="list">
            <listEntry value="0x0000FF">@Strings.ColorBlue</listEntry>
            <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
            <listEntry value="0x000000">@Strings.ColorBlack</listEntry>
        </settingConfig>
    </setting>
    <setting propertyKey="@Properties.InactiveColor" title="@Strings.InactiveColorTitle">
        <settingConfig type="list">
            <listEntry value="0x0000AA">@Strings.ColorBlue</listEntry>
            <listEntry value="0x00AA00">@Strings.ColorGreen</listEntry>
            <listEntry value="0xAA0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
            <listEntry value="0x000000">@Strings.ColorBlack</listEntry>
            <listEntry value="0x555555">@Strings.ColorDkGray</listEntry>
            <listEntry value="0xAAAAAA">@Strings.ColorLtGray</listEntry>
        </settingConfig>
    </setting>
    <setting propertyKey="@Properties.BackgroundColor" title="@Strings.BackgroundColorTitle">
        <settingConfig type="list">
            <listEntry value="0x0000FF">@Strings.ColorBlue</listEntry>
            <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
            <listEntry value="0x000000">@Strings.ColorBlack</listEntry>
            <listEntry value="0x555555">@Strings.ColorDkGray</listEntry>
            <listEntry value="0xAAAAAA">@Strings.ColorLtGray</listEntry>
        </settingConfig>
    </setting>
    
    
    <setting propertyKey="@Properties.Font" title="@Strings.FontTitle">
        <settingConfig type="list">
            <listEntry value="0">@Strings.FontStencil</listEntry>
            <listEntry value="1">@Strings.FontStencilXL</listEntry>
            <listEntry value="2">@Strings.FontArialBlack</listEntry>
            <listEntry value="3">@Strings.FontArialBlackXL</listEntry>
            <listEntry value="4">@Strings.FontXTiny</listEntry>
            <listEntry value="5">@Strings.FontTiny</listEntry>
            <listEntry value="6">@Strings.FontSmall</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.BatteryStatus" title="@Strings.BatteryStatusTitle">
        <settingConfig type="boolean"/>
    </setting>
    <setting propertyKey="@Properties.DemonstrationMode" title="@Strings.DemonstrationModeTitle">
        <settingConfig type="boolean"/>
    </setting>

</settings>
